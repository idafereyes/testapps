<flow xmlns="http://www.springframework.org/schema/webflow"	
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	
xsi:schemaLocation="http://www.springframework.org/schema/webflow
http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
parent="_miModuloEventsHandlers/eventsHandlers"
start-state= "_jVoiceCheckInit" >


<action-state id="_jVoiceCheckInit">
	<evaluate expression="jVoiceArchData.initialized" />
		<transition on="no" to="_jVoiceInit"/>
		<transition to="miMenu"/>
	</action-state>

<view-state id="_jVoiceInit" view="#{flowProcessor.getRenderer().getInitView()}" model="jVoiceArchData">
	<transition to="miMenu" >
		<set name="jVoiceArchData.initialized" value="true"/>
	</transition>
</view-state>
<end-state id="Final" view="#{flowProcessor.getRenderer().getView()}">
	<output name="result" value="''" />
</end-state>
<action-state id="miMenu">
	<on-entry>
		<evaluate expression="jVoiceArchInput" result="flashScope.miMenu"/>
		<set name="flashScope.miMenu.name" value="'miMenu'" />
		
		<evaluate expression="jVoiceArchGrammar" result="flashScope.grammar1" />
		<set name="flashScope.grammar1.src" value="'builtin:dtmf/digits'"/>
		<set name="flashScope.grammar1.mode" value="'dtmf'"/>
		<set name="flashScope.grammar1.module" value="'miModulo'"/>
		<evaluate expression="flashScope.miMenu.grammars.add(flashScope.grammar1)" />
			        <evaluate expression="jVoiceArchAudioItem" result="flashScope.miMenumainAudios1"/><evaluate expression="jVoiceArchWording" result="flashScope.miMenumainAudios1.wording"/>
			        <set name="flashScope.miMenumainAudios1.wording.text" value="'TTS text'"/>
			        <evaluate expression="flashScope.miMenu.mainAudios.add(flashScope.miMenumainAudios1)"/>
	</on-entry>
	<evaluate expression="flowProcessor.process(flashScope.miMenu)"/>
	<transition to="render_miMenu"></transition>
</action-state>

<view-state id="render_miMenu" view="#{flowProcessor.getRenderer().getView()}" model="lastInputResult">
	<transition on="match" to="render_decision_miMenu"/>
</view-state>
	
<action-state id="render_decision_miMenu">
	<evaluate expression="lastInputResult.interpretation"></evaluate>
	<transition on="optionInterpretation1" to="Final"/>
	<transition on="optionInterpretation2" to="Final"/>
</action-state>
</flow> 
